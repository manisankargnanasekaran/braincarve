<p id="notice"><%= notice %></p>

<h1>Employee Salaries</h1>

<table>
  <thead>
    <tr>
      <th>Employee</th>
      <th>Salary amount</th>
      <th>Account holder name</th>
      <th>Account number</th>
      <th>Ifsc code</th>
      <th>Bank name</th>
      <th>Account type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @employee_salaries.each do |employee_salary| %>
      <tr>
        <td><%= employee_salary.employee %></td>
        <td><%= employee_salary.salary_amount %></td>
        <td><%= employee_salary.account_holder_name %></td>
        <td><%= employee_salary.account_number %></td>
        <td><%= employee_salary.ifsc_code %></td>
        <td><%= employee_salary.bank_name %></td>
        <td><%= employee_salary.account_type %></td>
        <td><%= link_to 'Show', employee_salary %></td>
        <td><%= link_to 'Edit', edit_employee_salary_path(employee_salary) %></td>
        <td><%= link_to 'Destroy', employee_salary, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

