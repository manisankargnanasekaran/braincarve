<p id="notice"><%= notice %></p>

<h1>Employee Personals</h1>

<table>
  <thead>
    <tr>
      <th>Employee</th>
      <th>Gender</th>
      <th>Marrital status</th>
      <th>Nationality</th>
      <th>Date of birth</th>
      <th>Blood group</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @employee_personals.each do |employee_personal| %>
      <tr>
        <td><%= employee_personal.employee %></td>
        <td><%= employee_personal.gender %></td>
        <td><%= employee_personal.marrital_status %></td>
        <td><%= employee_personal.nationality %></td>
        <td><%= employee_personal.date_of_birth %></td>
        <td><%= employee_personal.blood_group %></td>
        <td><%= link_to 'Show', employee_personal %></td>
        <td><%= link_to 'Edit', edit_employee_personal_path(employee_personal) %></td>
        <td><%= link_to 'Destroy', employee_personal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

