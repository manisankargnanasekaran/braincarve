<p id="notice"><%= notice %></p>

<h1>Invoice Items</h1>

<table>
  <thead>
    <tr>
      <th>Invoice</th>
      <th>Inventory item</th>
      <th>Invoice qty</th>
      <th>Cost per item</th>
      <th>Amount</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @invoice_items.each do |invoice_item| %>
      <tr>
        <td><%= invoice_item.invoice %></td>
        <td><%= invoice_item.inventory_item %></td>
        <td><%= invoice_item.invoice_qty %></td>
        <td><%= invoice_item.cost_per_item %></td>
        <td><%= invoice_item.amount %></td>
        <td><%= link_to 'Show', invoice_item %></td>
        <td><%= link_to 'Edit', edit_invoice_item_path(invoice_item) %></td>
        <td><%= link_to 'Destroy', invoice_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

