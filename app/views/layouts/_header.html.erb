<%if Admin? %>
       <header class="header sticky-top">  
        <nav class="navbar">
          <div class="container-fluid">

            <ul class="list-unstyled header_nav">

              <button class="menu-btn" type="button" data-toggle="collapse" id="sidebarCollapse">
                 <i class="fa fa-bars" aria-hidden="true"></i>
               </button>

          <b style="text-align: center; width: 100%; font-size: 16px;">
            <%= current_user.franchisee.location if current_user.franchisee %> - <%= current_user.franchisee.franchisee_type if current_user.franchisee %>
            <br>
            <% if (Date.today..Date.today+30).include?(current_user.franchisee.latest_renewal) %>
                 <p id="renewal_msg" class="animated bounce infinite" style="color: red; font-size: 14px;">Agreement Renewal date is nearby : <%= current_user.franchisee.latest_renewal.to_date.strftime("%d-%m-%Y") if current_user.franchisee.latest_renewal %></p>   
            <%end%>
          </b>

              <li class="li_width">
                <ul class="list-unstyled">
                  <li><a href="<%= logout_path %>" class="nav-link logout", data-confirm="Are you sure want to logout?">Logout <i class="fa fa-power-off" ></i></a></li> &nbsp;&nbsp;&nbsp;
                  <%= link_to "<i class='btn btn-success btn-sm btn-circle fa fa-user' id='backpagebutton'></i>".html_safe, users_franchisee_profile_path, title: "My Profile" %>
                     <!-- <button type="button" class="btn btn-primary btn-circle btn-lg pull-right"><i class="fa fa-list"></i></button> -->
                </ul>
              </li>
            </ul>

          </div>
        </nav>
      </header>
<%end%>



