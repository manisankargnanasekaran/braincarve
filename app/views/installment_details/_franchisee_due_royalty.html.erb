<div id="due_royalty_pay_slip-modal" class="modal-dialog-lg modal fade"></div>
<div id="due_royalty_payment_detail-modal" class="modal-dialog-lg modal fade"></div>



<div class="card">
  <div class="card-header-1">
  </div>
<div class="card-body">
    <table id="franchisee_due_table" class="table table-striped display" cellspacing="0" width="100%">
  <thead>
    <tr>
      <th>Date</th> 
      <th>From</th>
      <th>Franchisee Type</th>
      <th>Amount</th>
      <th>Payment Status</th>
    </tr>
  </thead>

  <tbody>
   <% @franchisee_royalty_details.each do |due_royalty| %>
      <tr>
   
          <td><%= due_royalty.created_at.to_date.strftime("%d-%m-%Y") if due_royalty.created_at %></td>
          <td><%= due_royalty.franchisee.location if due_royalty.franchisee %></td>
          <td><%= due_royalty.franchisee.franchisee_type if due_royalty.franchisee %></td> 
          <td><%= due_royalty.amount %></td>
          <td>
              <% if due_royalty.paid_status == true %>
                  <%= link_to '<i class="btn-sm btn-blue fa fa-money" aria-hidden="true"> Paid</i>'.html_safe, due_paydetail_path(id: due_royalty.id), remote: true %>
              <% else %>
                  <%= link_to '<i class="btn-sm btn-red fa fa-money" aria-hidden="true"> Unpaid</i>'.html_safe, due_payslip_path(id: due_royalty.id), remote: true %>
              <% end %>
          </td>
        </tr>
    <% end %>
  </tbody>
</table>

</div> 

</div>






<script type="text/javascript">
$(document).ready(function() {
  $("#franchisee_due_table").dataTable({
