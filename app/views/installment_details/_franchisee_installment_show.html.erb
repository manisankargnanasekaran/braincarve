<div class="card">
  <div class="card-header-1">
  </div>
<div class="card-body">
  <table id="franchisee_installment_show" class="table table-striped display" cellspacing="0" width="100%">
      <thead>
        <tr>
          <th>Due date</th>
          <th>Amount</th>
          <th>Payment Status</th>
        </tr>
      </thead>

        <tbody>
         <% @installment_details.each do |ins_detail| %>
            <tr>           
              <td><%= ins_detail.installment_date.to_date.strftime("%d-%m-%Y") if ins_detail.installment_date %></td>
              <td><%= ins_detail.installment_amount %></td>
              <td>
                    <% if ins_detail.paid_status == true %>
                        <%#= link_to '<i class="btn-sm btn-blue fa fa-money" aria-hidden="true"> Paid</i>'.html_safe %>
                        <i class="btn-sm btn-blue fa fa-money" aria-hidden="true"> Paid</i>
                    <% else %>
                        <%#= link_to '<i class="btn-sm btn-red fa fa-money" aria-hidden="true"> Unpaid</i>'.html_safe%>
                        <i class="btn-sm btn-red fa fa-money" aria-hidden="true"> Unpaid</i>
                    <% end %>
                  </td>
            </tr>
          <% end %>
        </tbody>
  </table>

</div>

</div>



<script type="text/javascript">
$(document).ready(function() {
  $("#franchisee_installment_show").dataTable({
    columnDefs: [
    {orderable: false, targets: -1},
    {orderable: false, targets: -2},
    {orderable: false, targets: -3},
    ]
  });
});
</script>

