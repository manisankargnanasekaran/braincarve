    <!-- employee cards  -->
<div class="card">
  <div class="card-header">
    <h3>Employees
      <%= link_to "<i class='fa fa-plus'></i>".html_safe, new_employee_path, class: " head-title pull-right" %>
    </h3>
  </div>

  <div class="card-body">
<div class="container">
  <div class="row">

   <% @employees.each do |employee| %>
    <div class="col-lg-4 col-sm-6">
      <div class="card hovercard">
        <div class="row empl-detail">
          <div class="avatar">
            <% if employee.profile_image.present? %>
                <%= image_tag employee.profile_image.image_url %>
            <% elsif employee.employee_personal.gender == "Male" %>
                <img alt="img" src="<%= asset_url("professional_men.png") %>">
            <% elsif employee.employee_personal.gender == "Female"%>
                <img alt="img" src="<%= asset_url("professional_women.jpeg") %>">
            <% else %>
                <img alt="img" src="<%= asset_url("unknown.png") %>">
            <% end %>
          </div>
          <div class="info">
            <div class="title">
              <p><%= employee.prefix %> <%= employee.first_name %> <%= employee.last_name %></p>
              <p class="phno"><%= employee.employee_contact.contact_no if employee.employee_contact %></p>
            </div>
            <div class="desc"><%= employee.employee_identity %></div>
            <div class="desc">Leave for <%= Date.today.strftime("%B")%> : <span><%= employee.employee_attendances.where(:leave_date => Date.current.beginning_of_month..Date.current.end_of_month).count %></span></div>
          </div>  

        <div class="po-markup">  
                <a class="detail-btn float-right po-link" href="#"  data-trigger="focus"><i class="fa fa-ellipsis-v" aria-hidden="true"></i></a> 
            <div class="po-content hidden">
                <div class="po-body">   
                  <ul>
                  <li><%= link_to "<i class='btn btn-sm btn-orange fa fa-eye'></i>".html_safe, employee, title: "View" %></li>
                  <li><%= link_to "<i class='btn btn-sm btn-orange fa fa-pencil'></i>".html_safe, edit_employee_path(employee), title: "Edit" %></li>
                  <li><%= link_to "<i class='btn btn-sm btn-orange fa fa-plus'></i>".html_safe, employee_attendances_url(id: employee.id), title: "Add leave" %></li>
                   </ul>
                </div>
            </div>  
        </div>

        </div>
      </div>
    </div>  
  <% end %>   

  </div>
</div>

</div>
</div>


