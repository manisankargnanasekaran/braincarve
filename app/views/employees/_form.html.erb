<!-- Style for Multistep form - start -->

<style type="text/css">
#regForm {
  background-color: #ffffff;
  margin: 0 auto;
  padding: 25px 30px;
  width: 100%;
  min-width: 250px;
}
input {
  padding: 10px;
  font-size: 17px;
  font-family: Raleway;
  border: 1px solid #aaaaaa;
}

/* Mark input boxes that gets an error on validation: */
input.invalid {
  background-color: #fdebe1;
}

/* Hide all steps by default: */
.tab {
  display: none;
}

.multi-step-form button {
  background-color: #828488;
color: #ffffff;
border: none;
padding: 10px 20px;
font-size: 17px;
font-family: Raleway;
cursor: pointer;
border-radius: 30px;
}

.multi-step-form button:hover {
  opacity: 0.8;
  /*background-color: #e67a3f;*/
}

#prevBtn {
  background-color: #bbbbbb;
}

.step.active {
  opacity: 1;
}

/* Mark the steps that are finished and valid: */
  .step.finish:after{
   background-color: #E67A3F !important;
  }

  #progressbar li .finish:before, #progressbar li .finish:after{
        background: #27AE60 !important;
            color: white;
  }
  #progressbar li.finish:before{
    background: #E67A3F !important;
            color: white;
  }

.multi-step-form .tab-title{
font-size: 20px;
font-weight: 600;
margin-bottom: 30px;
color: #828488;
}


#progressbar {
    margin-bottom: 30px;
    overflow: hidden;
    counter-reset: step;
    width: 75%;
    margin: 0 auto;
}
#progressbar li {
    list-style-type: none;
    color: #e67b40;
    text-transform: uppercase;
    font-size: 12px;
    width:20.33%;
    float: left;
    position: relative;
    text-align: center;
}
#progressbar li.active:before{
    /*background: #E67A3F; */
    background: #D4530D;
    color: white;
}
#progressbar li:before {
    content: counter(step);
    counter-increment: step;
    width: 20px;
    line-height: 20px;
    display: block;
    font-size: 10px;
    color: #fff;
    background: #848282;
    border-radius: 3px;
    margin: 0 auto 5px auto;
}
#progressbar li:after {
    content: '';
    width: 100%;
    height: 2px;
    background: #848282;
    position: absolute;
    left: 57%;
    top: 9px;
    z-index: 22s;
}
#progressbar li:nth-last-child(1):after{
   content: none;
} 
.f-upload input{
  overflow:hidden;
}
@media only screen and (max-width:767px){
  #progressbar{
    margin: 0 auto;
    padding: 0px;
    width: 100%;
  }
  #progressbar li:after{
    left: 61%;
  }
  #regForm{
  padding: 25px 0px;
  }
  #progressbar li{
    width: 24.33%!important;
    font-size: 9px;
  }
}
</style>


