          <div class="col-md-4 form-group">
            <label class="col-sm-12 col-md-12 control-label">Job Title </label>
            <div class="col-sm-9 col-md-12 ">
               <%= form.text_field :job_title, id: :employee_job_title, class: "form-control"%>
