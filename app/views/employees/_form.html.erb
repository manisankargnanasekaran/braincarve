          <label class="col-sm-12 col-md-12 control-label">Account Number <b>*</b></label>
          <div class="col-sm-9 col-md-12 ">
              <%= salary.text_field :account_number, id: :employee_account_number, class: "form-control mandatory" %>
            </div>
