<p id="notice"><%= notice %></p>

<h1>Employee Contacts</h1>

<table>
  <thead>
    <tr>
      <th>Employee</th>
      <th>Contact no</th>
      <th>Address</th>
      <th>Country</th>
      <th>State</th>
      <th>City</th>
      <th>Pincode</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @employee_contacts.each do |employee_contact| %>
      <tr>
        <td><%= employee_contact.employee %></td>
        <td><%= employee_contact.contact_no %></td>
        <td><%= employee_contact.address %></td>
        <td><%= employee_contact.country %></td>
        <td><%= employee_contact.state %></td>
        <td><%= employee_contact.city %></td>
        <td><%= employee_contact.pincode %></td>
        <td><%= link_to 'Show', employee_contact %></td>
        <td><%= link_to 'Edit', edit_employee_contact_path(employee_contact) %></td>
        <td><%= link_to 'Destroy', employee_contact, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

