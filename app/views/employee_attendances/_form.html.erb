<%= form_for(employee_attendance, validate: true) do |form| %>
  
  <div class="form-group">
    <%= form.label :leave_period, "Leave(From - To)" %>
        <%= form.text_field :leave_period, class: "form-control", id: :leave_period %>
  </div>

  <div class="form-group">
    <%= form.label :day_count, "Number of Days" %>
    <%= form.text_field :day_count, class: "form-control", id: :day_count %>
  </div>

   <div class="form-group">
    <%= form.label :reason, "Reason" %>
    <%= form.text_area :reason, class: "form-control", id: :leave_reason %>
  </div>

  <%= form.hidden_field :employee_id, value: params[:id] %>
<br>
  <div class="actions submit_n_cancel">
   <%= link_to "Cancel", employee_attendances_path, class: "btn btn-info btn-sm" %>&nbsp; | &nbsp;<%= form.submit class: "btn btn-info btn-sm" %>
  </div>
<% end %>


<script>
$(document).ready(function() {
  $('#leave_period').flatpickr({
    mode: "range",
    dateFormat: "d-m-Y"
  });
});
</script>

