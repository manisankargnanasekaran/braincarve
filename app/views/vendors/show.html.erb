<div class="card">
<div class="card-header">
  <h3>View Vendor
    <%= link_to "<i class='fa fa-reply'></i>".html_safe, vendors_path, class: "head-title pull-right" %>
  </h3>
</div>
<div class="card-body">
<div class="row">
  <div class="col-md-2">Vendor Name</div>
  <div class="col-md-1"><strong>:</strong></div>
  <div class="col-md-3"><strong><%= @vendor.vendor_name %></strong></div>
</div>

<div class="row">
  <div class="col-md-2">Contact Number</div>
  <div class="col-md-1"><strong>:</strong></div>
  <div class="col-md-3"><strong><%= @vendor.contact_no %></strong></div>
</div>

<div class="row">
  <div class="col-md-2">GST(%)</div>
  <div class="col-md-1"><strong>:</strong></div>
  <div class="col-md-3"><strong><%= @vendor.gst_percentage %></strong></div>
</div>

<div class="row">
<div class="col-md-2">Address</div>
<div class="col-md-1"><strong>:</strong></div>
<div class="col-md-3"><strong><%= @vendor.vendor_address %></strong></div>
</div>
</div>

<style type="text/css">
	.card-body{
		padding: 30px;
	}
</style>