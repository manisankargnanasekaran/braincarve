<%= form_for(vendor, validate: true) do |form| %>

  <% if vendor.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(vendor.errors.count, "error") %> prohibited this vendor from being saved:</h2>

      <ul>
      <% vendor.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="form-group col-md-6">
      <%= form.label :vendor_name, "Vendor Name" %>      
            <%= form.text_field :vendor_name, id: :vendor_vendor_name, class: "form-control" %>
    </div>
  </div>

  <div class="row">
    <div class="form-group col-md-3">
      <%= form.label :contact_no, "Contact Number" %>      
      <%= form.text_field :contact_no, id: :vendor_contact_no, class: "form-control" %>
    </div>

    <div class="form-group col-md-3">
          <%= form.label :gst_percentage, "GST(%)" %>
          <%= form.text_field :gst_percentage, id: :vendor_gst_percentage, class: "form-control" %>
    </div>

  </div>

   <div class="row">
      
      <div class="form-group col-md-6">
          <%= form.label :vendor_address, "Address" %>      
          <%= form.text_area :vendor_address, id: :vendor_vendor_address, class: "form-control", rows: 2 %>
      </div>
  </div>

<br>
  <div class="actions submit_n_cancel">
   <%= link_to "Cancel", vendors_path, class: "btn btn-info btn-sm" %>&nbsp; | &nbsp;<%= form.submit "Create", class: "btn btn-info btn-sm" %>
  </div>
<% end %>


<script>
$('#select').selectize({
  create: true,
});
</script>


