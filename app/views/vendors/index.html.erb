<div class="card">
<div class="card-header">
  <h3>Vendors
    <%= link_to "<i class='fa fa-plus'></i>".html_safe, new_vendor_path, class: "head-title pull-right", title: "Add Vendor" %>
  </h3>
</div>
<div class="card-body">
<table id="vendor_table" class="table table-striped display" cellspacing="0" width="100%">
  <thead>
    <tr>
      <th>Vendor name</th>
      <th>Contact Number</th>
      <th>Address</th>
      <th>GST(%)</th>
    </tr>
  </thead>

  <tbody>
    <% @vendors.each do |vendor| %>
      <tr id="<%= vendor.id %>">
        <td><%= vendor.vendor_name %></td>
        <td><%= vendor.contact_no %></td>
        <td><%= vendor.vendor_address.html_safe %></td>
        <td><%= vendor.gst_percentage %></td>
      </tr>
    <% end %>
  </tbody>
</table>

    <div class="side-pop" style="color:white; display:none">
    <ul>
    <li><a title="Show" id="show"> <i class="btn btn-sm btn-default fa fa-sm fa-eye"></i></a></li>
      <li><a title="Edit" id="edit" > <i class="btn btn-sm btn-default fa fa-sm fa-pencil" ></i></a></li>
       <li><a title="Delete" id="destroy" data-method="delete" class="confirmation"> <i class="btn btn-sm btn-default fa fa-sm fa-trash-o"></i></a></li>
    </ul>
  </div>



</div>
<style type="text/css">
.btn-orange{
background-color: #E26616;
color: #fff;
}
</style>



<script type="text/javascript">
  
$(document).ready(function() {
var table = $('#vendor_table').DataTable({
   "scrollY":  '50vh',
    "crollCollapse": true,
    "scrollX": true
});
    $('#vendor_table tbody').on('click', 'tr', function () {
            table.$('tr.selected').removeClass('selected');
            $(this).addClass('selected');
            var id = $(this).attr('id'); 
            $(".side-pop").show();
            $("#show").attr("href","/vendors/"+id);
            $("#destroy").attr("href","/vendors/"+id);
           $("#edit").attr("href","/vendors/"+id+"/edit");
    } ); 
});
  $('.confirmation').on('click', function () {
        return confirm('Are you sure?');
    });

</script>



