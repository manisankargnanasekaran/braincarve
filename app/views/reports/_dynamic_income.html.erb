    <table id="to_company_bc_company_table_income" class="table table-striped display" cellspacing="0" width="100%">
  <thead>
    <tr>
     <th>Date</th>
      <th>Royalty / Inventry</th>
      <th>Amount</th>
    </tr>
  </thead>

  <tbody>

   <% @income.each do |income| %>
      <tr>

       
<!--         ii.is_a?(CompanyRoyaltyDetail)
 -->       
  
   
        <%if income.is_a?(CompanyRoyaltyDetail)%>
        <td><%= income.created_at.strftime("%d-%m-%Y")%></td>
        <td> Royalty </td>
        <td><%= income.amount%></td>
        <%else%>
        <td><%= income.payment_date.strftime("%d-%m-%Y")%></td>
        <td> Inventry </td>
        <td><%= income.amount_paid%></td>

        <%end%>
      </tr>
    <% end %>
  </tbody>
</table>

