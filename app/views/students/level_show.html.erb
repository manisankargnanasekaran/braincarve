<div class="card">
  <div class="card-header">
    <h3>Student Level Upgrade
      
    </h3>
  </div> 
<div class="card-body">

<div class="table-responsive">
    <table id="upgrade_level_table" class="table table-striped display" cellspacing="0" width="100%">
  <thead>
    <tr>
    <th> Franchisee Name </th>
      <th class="reg-date">Registration Date</th>
      <th  class="std-name">Name</th>
      <th class="std-class">Age</th>
      <th class="cont-no">Contact Number</th>
      <th class="sch-name">Level</th> 
      <th class="sch-lctn">School location</th> 
      <th> Show</th>
      <th> Upgrade Level </th>
      
    </tr>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
       <tr>
       
       <td class="reg-date"><%= Franchisee.find_by(user_id: student.created_by_id).location %></td>
        <td class="reg-date"><%= student.registration_date.to_date.strftime("%d-%m-%Y") if student.registration_date%></td>
        <td class="std-name"><%= student.student_name %></td>       
        <td class="std-class"><%= student.age %></td>      
        <td class="cont-no"><%= student.contact_no %></td>
        <td class="sch-name"><%= student.level %></td>
        <td class="sch-lctn"><%= student.school_location %></td>
        <td><%= link_to "<i class='fa fa-eye btn btn-sm btn-orange' title='View Student'></i>".html_safe, student_detail_show_path(student_id: student.id) %></td>
        <td class="sch-lctn"> <%= link_to "<i class='fa fa-link', title='Upgrade Level'></i>".html_safe, student_level_update_path(student_id: student.id), class: " head-title", data: { confirm: 'Do you want to Upgrade the Level?' } %></td>
      </tr> 
    <% end %>
  </tbody>
</table>
</div>
</div>
</div>


