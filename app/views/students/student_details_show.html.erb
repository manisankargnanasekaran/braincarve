<div class="card">
	<div class="card-header">

<h3> Student Details
<%= link_to "<i class='fa fa-reply'></i>".html_safe, upgrade_level_path, class: " head-title pull-right", data: { confirm: 'Do you want to go to previous page?' } %></h3>
</div>
		<table id="student_repot" class="table table-striped display" cellspacing="0" width="100%">
		 <thead>
		   <tr>
		    <th>Name</th>
		    <th> Joining Date </th>
		    <th>Age</th>
		    <th>Contact Number</th>
		    <th> Level</th>
		    
		   </tr>
		 </thead>
		 <tbody>
		
		      <tr>
			      <td class="std-name"><%= @students_report.student_name %></td> 
			      <td class="reg-date"><%= @students_report.registration_date.to_date.strftime("%d-%m-%Y") if @students_report.registration_date%></td>      
			      <td class="std-class"><%= @students_report.age %></td>      
			      <td class="cont-no"><%= @students_report.contact_no %></td>
			      <td class="sch-name"><%= @students_report.level %></td> 
			       </td> 
			    </tr>
		   
		  </tbody>
		</table>


	<h3> Student Payments</h3>
		<table class="table table-striped display" cellspacing="0" width="100%">
		 <thead>
		   <tr>
		    <th>Payer Name</th>
		    <th> Amount </th>
		    <th>Payment Mode</th>
		    <th>Fee Type</th>
		    <th> Date</th>
		    
		   </tr>
		 </thead>
		 <tbody>
		    <% @student_fee.each do |student| %>
		      <tr>
			      <td class="std-name"><%= student.payer_name %></td> 
			      <td class="reg-date"><%= student.amount%></td>      
			      <td class="std-class"><%= student.reference_number %></td>      
			      <td class="cont-no"><%= student.fee_type %></td>
			      <td class="sch-name"><%= student.dated.to_date.strftime("%d-%m-%Y") %></td> 
			       </td> 
			    </tr>
		    <% end %>
		  </tbody>
		</table>
	
<h3> Student Attendance</h3>
		<table class="table table-striped display" cellspacing="0" width="100%">
		 <thead>
		   <tr>
		    
		    <th> Sl.No </th>
		    <th>Payment Mode</th>
		   
		    
		   </tr>
		 </thead>
		 <tbody>
		 <% s = 0 %>
		    <% @attendance.each do |student| %>
		    
		      <tr>
			      <td class="std-name"><%= s += 1 %></td> 
			      <td class="sch-name"><%= student.date.to_date.strftime("%d-%m-%Y") %></td> 
			       </td> 
			    </tr>
		    <% end %>
		  </tbody>
		</table>
	</div>






</div>
</div>

</div>




