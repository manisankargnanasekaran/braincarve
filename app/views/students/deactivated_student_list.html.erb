 <div class="card">
  <div class="card-header">
    <h3>Inactive Students
      <%= link_to "<i class='fa fa-reply'></i>".html_safe, students_path, class: "head-title pull-right" %>
    </h3>
  </div> 

<div class="card-body">

    <div class="table-responsive">
        <table id="deactive_student_table" class="table table-striped display" cellspacing="0" width="100%">
          <thead>
            <tr>
              <th>Registration</th>
              <th>Name</th>
              <th>Age</th>
              <th>Contact Number</th>
              <th>Level</th>
              <th></th>
            </tr>
          </thead>

          <tbody>
            <% @deactivated_students.each do |student| %>
              <tr>
                <td><%= student.registration_date.to_date.strftime("%d-%m-%Y") if student.registration_date%></td>
                <td><%= student.student_name %></td>       
                <td><%= student.age %></td>      
                <td><%= student.contact_no %></td>
                <td><%= student.level %></td>
                <td><%= link_to "<i class='btn btn-sm btn-orange fa fa-check-circle'></i>".html_safe, students_activate_student_path(id: student.id), title: "Activate", data: { confirm: 'Are you sure to activate?' }%></td>
              </tr> 
            <% end %>
          </tbody>
        </table>
    </div>
</div>
</div>


<script type="text/javascript">
      $(document).ready(function() {
  $("#example").dataTable();
});
</script>


<script type="text/javascript">
$(document).ready(function() {
  $("#deactive_student_table").dataTable({
    columnDefs: [
    {orderable: false, targets: -1},
    {orderable: false, targets: -2},
    {orderable: false, targets: -3},
    ]
  });
});
</script>


