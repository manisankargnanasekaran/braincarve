<p id="notice"><%= notice %></p>

<h1>Purchase Items</h1>

<table>
  <thead>
    <tr>
      <th>Purchase</th>
      <th>Inventory item</th>
      <th>Cost per item</th>
      <th>Quantity</th>
      <th>Amount without gst</th>
      <th>Amount with gst</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @purchase_items.each do |purchase_item| %>
      <tr>
        <td><%= purchase_item.purchase %></td>
        <td><%= purchase_item.inventory_item %></td>
        <td><%= purchase_item.cost_per_item %></td>
        <td><%= purchase_item.quantity %></td>
        <td><%= purchase_item.amount_without_gst %></td>
        <td><%= purchase_item.amount_with_gst %></td>
        <td><%= link_to 'Show', purchase_item %></td>
        <td><%= link_to 'Edit', edit_purchase_item_path(purchase_item) %></td>
        <td><%= link_to 'Destroy', purchase_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

